#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/outputs.h>

#define TIMEOUT 300

/ {
    combos {
        combo_reset {
            timeout-ms = <TIMEOUT>;
            key-positions = <0 2>;
            bindings = <&sys_reset>;
        };
        combo_bootloader {
            timeout-ms = <TIMEOUT>;
            key-positions = <0 1>;
            bindings = <&bootloader>;
        };
    };

    keymap: keymap {
        compatible = "zmk,keymap";
        default_layer {
            display-name = "default";
            bindings = <
                            &kp F13       &kp F14
                            &kp F15       &kp F16
                            &kp F17       &kp F18
                            &kp F19       &kp F20
                            &kp F21       &kp F22
                            &kp F23       &kp F24

            >;

        };
    };
};
